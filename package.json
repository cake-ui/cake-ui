{
  "name": "cake-ui",
  "version": "1.0.0",
  "description": "ðŸš€ Modular UI library, focusing on accessibility for React applications",
  "main": "index.js",
  "repository": "https://github.com/cake-ui/cake-ui",
  "author": "Matheus Kindrazki",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "tools/*"
    ],
    "nohoist": [
      "@emotion/core/types",
      "**/@emotion/core/types",
      "**/@types/theme-ui",
      "**/@types/theme-ui/**",
      "**/@types/theme-ui__components"
    ]
  },
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "clean:emotion-types": "rm -rf node_modules/@emotion/core/types",
    "postinstall": "yarn clean:emotion-types && yarn check:pkgs",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "start": "yarn prebuild && yarn storybook",
    "prebuild": "yarn pkg babel-plugin build",
    "build": "lerna run build --ignore @cake-ui/test-utils --no-private --stream",
    "test": "jest --maxWorkers=50%",
    "test:ci": "jest --runInBand",
    "lint": "lerna run lint --no-private --stream",
    "lint:types": "lerna run lint:types --no-private --stream",
    "prestorybook": "rimraf node_modules/.cache/storybook",
    "storybook": "start-storybook -p 6006",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "clean-dist": "yarn lerna exec -- rimraf dist",
    "bootstrap": "lerna bootstrap --use-workspaces"
  },
  "resolutions": {
    "**/react": "17.0.1",
    "**/react-dom": "17.0.1",
    "@popperjs/core": "2.4.4"
  },
  "dependencies": {
    "@babel/cli": "^7.12.0",
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.0",
    "@babel/preset-env": "^7.12.0",
    "@babel/preset-react": "^7.12.0",
    "@babel/preset-typescript": "^7.12.0",
    "@babel/runtime": "^7.12.0",
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@emotion/jest": "11.1.0",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@jest/types": "26.6.2",
    "@manypkg/cli": "0.17.0",
    "@storybook/addon-a11y": "~6.2.2",
    "@storybook/addon-actions": "~6.2.2",
    "@storybook/addon-knobs": "~6.2.2",
    "@storybook/addon-toolbars": "~6.2.2",
    "@storybook/cli": "~6.2.2",
    "@storybook/react": "~6.2.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.11.1",
    "@typescript-eslint/parser": "4.11.1",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "commitizen": "4.2.2",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv-cli": "4.0.0",
    "eslint": "7.17.0",
    "eslint-config-airbnb-typescript": "12.0.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-config-react": "1.1.7",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.3.0",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-testing-library": "3.9.2",
    "framer-motion": "^4.0.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-environment-jsdom": "26.6.2",
    "jest-watch-typeahead": "0.6.1",
    "lerna": "3.22.1",
    "lint-staged": "10.5.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "5.2.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "3.0.2",
    "storybook-addon-performance": "0.15.2",
    "ts-jest": "26.4.4",
    "ts-node": "9.1.1",
    "typescript": "^4.1.3",
    "yarn-deduplicate": "3.1.0"
  }
}
